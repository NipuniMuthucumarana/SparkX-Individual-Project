<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>NCMS</display-name>

    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>lk.sparkx.ncms.HelloWorld</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PatientServlet</servlet-name>
        <servlet-class>lk.sparkx.ncms.controller.PatientServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Statistics</servlet-name>
        <servlet-class>lk.sparkx.ncms.Statistics</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PatientServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Statistics</servlet-name>
        <url-pattern>/statistics/*</url-pattern>
    </servlet-mapping>

</web-app>